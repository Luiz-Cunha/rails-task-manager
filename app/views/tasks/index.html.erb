<div class="container">
  <h1>All Tasks</h1>
  <ul class="list-unstyled">
    <% @tasks.each do |task| %>
      <li>
        <input type="checkbox" id="task_name" name="task_name" value="Task" <%= task.completed ? "checked" : "" %>>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="fa fa-trash px-4"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add a new Task", new_task_path, class: "btn btn-primary mt-3" %>
</div>
