<h1>Test ALL</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><input type="checkbox" id="task_name" name="task_name" value="Task" <%= task.completed ? "checked" : "" %>>
    <% task.completed %><%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to "Add a new Task", new_task_path %>
