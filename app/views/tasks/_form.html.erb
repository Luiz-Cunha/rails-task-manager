<%= form_with model: @task, class: "needs-validation", novalidate: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :details, class: "form-label" %>
    <%= f.text_field :details, class: "form-control", required: true %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :completed, class: "form-check-input", id: "completed" %>
    <%= f.label :completed, class: "form-check-label", for: "completed" %>
  </div>

  <div>
    <%= f.submit "Save Task", class: "btn btn-primary" %>
  </div>
<% end %>
